{
	"name": "wordpress/wordpress",
	"license": "GPL-2.0-or-later",
	"description": "WordPress is open source software you can use to create a beautiful website, blog, or app.",
	"homepage": "https://wordpress.org",
	"keywords": [
		"blog", "cms", "wordpress", "wp"
	],
	"support": {
		"issues": "https://core.trac.wordpress.org/"
	},
	"require": {
		"php": ">=5.6"
	},
	"require-dev": {
		"yoast/phpunit-polyfills": "^1.0.1"
	},
	"scripts": {
		"compat": "@php ./tools/phpcs/vendor/squizlabs/php_codesniffer/bin/phpcs --standard=./tools/phpcs/phpcompat.xml.dist --report=summary,source",
		"format": "@php ./tools/phpcs/vendor/squizlabs/php_codesniffer/bin/phpcbf --report=summary,source",
		"lint": "@php ./tools/phpcs/vendor/squizlabs/php_codesniffer/bin/phpcs --report=summary,source",
		"lint:errors": "@lint -n",
		"test": "@php ./vendor/phpunit/phpunit/phpunit",
	  	"post-update-cmd": [
		  "composer update --working-dir=./tools/phpcs"
		]
	}
}
