{
	"version": 2,
	"title": "Mint",
	"settings": {
		"color": {
			"duotone": [
				{
					"colors": [
						"#000000",
						"#FFFFFF"
					],
					"slug": "default-filter",
					"name": "Default filter"
				}
			],
			"palette": [
				{
					"slug": "foreground",
					"color": "#000000",
					"name": "Foreground"
				},
				{
					"slug": "background",
					"color": "#BDFFF3",
					"name": "Background"
				},
				{
					"slug": "primary",
					"color": "#000000",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#FFFFFF",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#FFFFFF",
					"name": "Tertiary"
				}
			]
		},
		"custom": {
			"spacing": {
				"small": "max(1.25rem, 5vw)",
				"medium": "clamp(1.75rem, 8vw, calc(3 * var(--wp--style--block-gap)))",
				"large": "clamp(2rem, 10vw, 4rem)",
				"outer": "var(--wp--custom--spacing--small, 1.25rem)"
			},
			"typography": {
				"font-size": {
					"huge": "clamp(2.5rem, 4vw, 3rem)",
					"gigantic": "clamp(3rem, 6vw, 3.5rem)",
					"colossal": "clamp(3.5rem, 8vw, 6.25rem)"
				}
			}
		},
		"layout": {
			"contentSize": "700px",
			"wideSize": "960px"
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "\"Bodoni Moda\", serif",
					"name": "Bodoni Moda",
					"slug": "bodoni-moda",
					"fontFace": [
						{
							"fontFamily": "Bodoni Moda",
							"fontWeight": "200 900",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/bodoni-moda/BodoniModa.ttf" ]
						},
						{
							"fontFamily": "Bodoni Moda",
							"fontWeight": "200 900",
							"fontStyle": "italic",
							"src": [ "file:./assets/fonts/bodoni-moda/BodoniModa-italic.ttf" ]
						}
					]
				}
			],
			"fontSizes": [
				{
					"size": "1rem",
					"slug": "small"
				},
				{
					"size": "1.125rem",
					"slug": "medium"
				},
				{
					"size": "1.25rem",
					"slug": "large"
				},
				{
					"size": "clamp(1.75rem, 3vw, 2.25rem)",
					"slug": "x-large"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/cover": {
				"filter": {
					"duotone": "var(--wp--preset--duotone--default-filter)"
				}
			},
			"core/image": {
				"filter": {
					"duotone": "var(--wp--preset--duotone--default-filter)"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-author": {
				"filter": {
					"duotone": "var(--wp--preset--duotone--default-filter)"
				}
			},
			"core/post-featured-image": {
				"filter": {
					"duotone": "var(--wp--preset--duotone--default-filter)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bodoni-moda)",
					"fontSize": "var(--wp--custom--typography--font-size--huge)",
					"fontWeight": "600"
				}
			},
			"core/query-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bodoni-moda)"
				}
			},
			"core/site-logo": {
				"filter": {
					"duotone": "var(--wp--preset--duotone--default-filter)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bodoni-moda)",
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontStyle":"normal",
					"fontWeight": "700",
					"textTransform": "uppercase"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bodoni-moda)",
					"fontWeight": "600"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bodoni-moda)",
					"fontWeight": "600"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bodoni-moda)",
					"fontWeight": "600"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bodoni-moda)",
					"fontWeight": "600"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bodoni-moda)",
					"fontWeight": "600"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--bodoni-moda)",
					"fontWeight": "600"
				}
			}
		}
	}
}
